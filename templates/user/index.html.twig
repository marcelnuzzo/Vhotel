{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-3">
            <img src="{{ user.picture }}" alt="Avatar de {{ user.firstname }} {{ user.lastname }}">
        </div>
        <div class="col-9">
            <h1>{{ user.firstname }} {{ user.lastname }}</h1>
            {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a href="{{ path("account_profile") }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                    <a href="{{ path("account_password") }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
