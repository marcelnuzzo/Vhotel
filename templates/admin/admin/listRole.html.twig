{% extends "admin/base.html.twig" %}

{% block title %}Table des roles{% endblock %}

{% block body %}

<div class="container">
    <div class = "jumbotron" style="background-color:#FEF9F9">
        <h1>Roles</h1>
    </div>  
    <a class="btn btn-warning mb-3" style="color:white" href="{{ path("app_admin_admin_newRole") }}" role="button" >Cr√©er</a>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Titre</th>
        </tr>
        {%for role in roles %}
            <tr>
                <td>{{ role.title }}</td>
                <td><a class="btn btn-info" style="color:white" href="{{ path("app_admin_admin_editRole", {'id':role.id}) }}" role="button" >Modifier</a></td>
                <td><a class="btn btn-danger" style="color:white" href="#" role="button" >Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}