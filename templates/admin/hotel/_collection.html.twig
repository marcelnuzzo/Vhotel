{% block _hotel_services_widget %}
    <p>Ici, vous pouvez ajouter vos services !</p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">
    
    <div class="form-group">
        <button type="button" id="add-service" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            Ajouter un service
        </button>
    </div>
{% endblock %}

{% block _hotel_services_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _hotel_services_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.label) }}
                    </div>
                    {#
                    <div class="col">
                        {{ form_widget(form.hotels) }}
                    </div>
                    #}
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}