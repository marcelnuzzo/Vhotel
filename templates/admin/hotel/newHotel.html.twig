{% extends 'admin/base.html.twig' %}

{% block title %}Hôtel{% endblock %}

{% form_theme form 'admin/hotel/_collection.html.twig' %}

{% block body %}

{% if editMode %}
    <div class="jumbotron" style="background-color:orange">
        <h1>Modification de l'hôtel</h1>
    </div>                
{% else %}
    <div class="jumbotron" style="background-color:cyan">
        <h1>Création d'un hôtel</h1>
    </div>
{% endif %}

    {#{{ form_start(form) }}#}
<div class="container">
    <div class="row">
        <div class="col">
        {#
        {{ form_row(form.name) }}
        {{ form_row(form.address) }}
        {{ form_row(form.description) }}
        {{ form_row(form.status) }}
        #}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class=" mx-auto d-block mt-3">
                <button type="submit" class="btn btn-success">
                    {% if editMode %}
                        Modifier
                    {% else %}
                        Créer
                    {% endif %}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col">
        {#
        {{ form_row(form.imageName) }}
        {{ form_row(form.imageFile) }}
        {{ form_row(form.categoryHotel) }}
        #}
        {#{{ form_row(form.services) }}#}
        </div>
    </div>
</div>
{#{{ form_end(form) }}#}

{% endblock %}

{% block javascripts %}

<script src="/js/hotel.js"></script>

{% endblock %}
