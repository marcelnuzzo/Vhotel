{% extends 'admin/base.html.twig' %}

{% block title %}Nouvel catégorie d'hôtel{% endblock %}

{% block body %}

{% if editMode %}
    <div class="jumbotron" style="background-color:orange">
        <h1>Modification de la catégorie de l'hôtel</h1>
    </div>                
{% else %}
    <div class="jumbotron" style="background-color:cyan">
        <h1>Création d'une catégorie d'hôtel</h1>
    </div>
{% endif %}
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            {{ form_start(form) }}
                
                {{ form_row(form.label, {'attr': {'placeholder': "Nom de la catégorie de l'hôtel"}}) }}
                
                <div class=" mx-auto d-block">
                    <button type="submit" class="btn btn-success">
                        {% if editMode %}
                            Modifier
                        {% else %}
                            Créer
                        {% endif %}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="col-3"></div>
    </div>
</div>
{% endblock %}