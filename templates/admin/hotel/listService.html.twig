{% extends 'admin/base.html.twig' %}

{% block title %}liste des services{% endblock %}

{% block body %}

    <div class ="jumbotron mt-3" style="background-color:#FEF9F9">
        <h1><mark>Services</mark></h1>
        <br><hr>
        <h2>{{ service | length }} service(s)</h2>
    </div>  
<div class="container">
    <a class="btn btn-warning" style="color:white" href="{{ path('app_admin_hotel_newService') }}" role="button" >Créer</a>
    <table class="table table-striped table-bordered table-hover mt-3">
        <tr>
            <th>Label</th>
            <th>hôtels</th>
        </tr>
        {%for service in services %}
            <tr>
                <td>{{ service.label }}</td>
                <td>
                {% for hotel in service.hotels %} 
                    <li>{{ hotel.name }}</li>
                {% endfor %}
                </td>
                <td><a class="btn btn-info" style="color:white" href="{{ path('app_admin_hotel_editService', {'id':service.id}) }}" role="button" >Modifier</a></td>
                <td><a class="btn btn-danger" style="color:white" href="{{ path('admin_hotel_deleteService', {'id':service.id}) }} " role="button" >Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}