{% extends 'admin/base.html.twig' %}

{% block title %}liste des catégories d'hôtels{% endblock %}

{% block body %}

<div class="container">
    <div class = "jumbotron" style="background-color:#FEF9F9">
        <h1><mark>Catégories d'hôtels</mark></h1>
        <br><hr>
        <h2>{{ categoryHotel | length }} catégorie(s).</h2>
    </div>  
    <a class="btn btn-warning" style="color:white" href="{{ path('app_admin_hotel_newCategoryHotel') }}" role="button" >Créer</a>
    <table class="table table-striped table-bordered table-hover mt-3">
        <tr>
            <th>Nom de la catégorie de l'hôtel</th>
        </tr>
        {%for categoryHotel in categoryHotels %}
            <tr>
                <td>{{ categoryHotel.label }}</td>
                <td><a class="btn btn-info" style="color:white" href="{{ path('app_admin_hotel_editCategoryHotel', {'id':categoryHotel.id}) }}" role="button" >Modifier</a></td>
                <td><a class="btn btn-danger" style="color:white" href="{{ path('admin_hotel_deleteCategoryHotel', {'id':categoryHotel.id}) }} " role="button" >Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}