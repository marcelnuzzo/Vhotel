{% extends 'admin/base.html.twig' %}

{% block title %}Service{% endblock %}

{#{% form_theme form 'admin/hotel/_collection2.html.twig' %}#}

{% block body %}

{% if editMode %}
    <div class="jumbotron" style="background-color:orange">
        <h1>Modification du sevice</h1>
    </div>                
{% else %}
    <div class="jumbotron" style="background-color:cyan">
        <h1>Création d'un service</h1>
    </div>
{% endif %}

    {{ form_start(form) }}
<div class="container">   
    {{ form_row(form.label) }}
    {#{{ form_row(form.hotel) }}#}

    <div class=" mx-auto d-block mt-3">
        <button type="submit" class="btn btn-success">
            {% if editMode %}
                Modifier
            {% else %}
                Créer
            {% endif %}
        </button>
    </div>
</div>
{{ form_end(form) }}

{% endblock %}
