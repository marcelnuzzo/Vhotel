{% extends 'admin/base.html.twig' %}

{% block title %}liste des catégories de chambre{% endblock %}

{% block body %}

<div class="container">
    <div class = "jumbotron" style="background-color:#FEF9F9">
        <h1><mark>Catégories de chambre</mark></h1>
        <br><hr>
        <h2>{{ categoryRoom | length }} catégorie(s).</h2>
    </div>  
    <a class="btn btn-warning" style="color:white" href="{{ path('app_admin_room_newCategoryRoom') }}" role="button" >Créer</a>
    <table class="table table-striped table-bordered table-hover mt-3">
        <tr>
            <th>Id</th>
            <th>Nom de la catégorie de la chambre</th>
        </tr>
        {%for categoryRoom in categoryRooms %}
            <tr>
                <td>{{ categoryRoom.id }}</td>
                <td>{{ categoryRoom.label }}</td>
                <td><a class="btn btn-info" style="color:white" href="{{ path('app_admin_room_editCategoryRoom', {'id':categoryRoom.id}) }}" role="button" >Modifier</a></td>
                <td><a class="btn btn-danger" style="color:white" href="{{ path('admin_room_deleteCategoryRoom', {'id':categoryRoom.id}) }} " role="button" >Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}