{% extends 'admin/base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}

{% if editMode %}
    <div class="jumbotron" style="background-color:orange">
        <h1>Modification de la chambre</h1>
    </div>                
{% else %}
    <div class="jumbotron" style="background-color:cyan">
        <h1>Création d'une chambre</h1>
    </div>
{% endif %}

    {{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col">
    
        {{ form_row(form.number) }}
        {{ form_row(form.area) }}
        {{ form_row(form.description) }}
        {{ form_row(form.status) }}
        {{ form_row(form.price) }}
        </div>
        <div class="col">
        {{ form_row(form.imageName) }}
        {{ form_row(form.imageFile) }}
        {{ form_row(form.categoryRoom) }}
        {{ form_row(form.typelit) }}
        {{ form_row(form.hotel) }}
            <div class=" mx-auto d-block mt-3">
                <button type="submit" class="btn btn-success">
                    {% if editMode %}
                        Modifier
                    {% else %}
                        Créer
                    {% endif %}
                </button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}