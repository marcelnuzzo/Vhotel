{% extends 'base.html.twig' %}

{% block title %}Nouvel hôtel{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1>Créer un nouvel hôtel</h1>
</div>

{{ form_start(form) }}
    
    {{ form_row(form.name) }}
    {{ form_row(form.address) }}
    {{ form_row(form.description) }}
    {{ form_row(form.status) }}
    {{ form_row(form.imageName) }}
    {{ form_row(form.imageFile) }}
    
    <div class=" mx-auto d-block">
        <button type="submit" class="btn btn-success">Créer hôtel</button>
    </div>
{{ form_end(form) }}

{% endblock %}