{% extends 'base.html.twig' %}

{% block title %}liste des hôtels{% endblock %}

{% block body %}
<div class="container">
    <div class = "jumbotron" style="background-color:#FEF9F9">
        <h1><mark>Hôtels</mark></h1>
    </div>  
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Nom de l'hôtel</th>
            <th>Adresse</th>
            <th>Description</th>
            {% if is_granted("ROLE_SUPER_ADMIN") %}
                <th>Statut</th>
                <th>fichier de l'image</th>
            {% endif %}
            <th>Catégorie</th>
            <th>Image</th>
        </tr>
        {%for hotel in hotel %}
            <tr>
                <td>{{ hotel.name }}</td>
                <td>{{ hotel.address }}</td>
                <td>{{ hotel.description }}</td>
                {% if is_granted("ROLE_SUPER_ADMIN") %}
                    <td>{{ hotel.status }}</td>
                    <td>{{ hotel.imageName }}</td>
                {% endif %}
                <td>{{ hotel.categoryHotel.label }}</td>
                <td><img src="{{ vich_uploader_asset(hotel, 'imageFile') }}" alt="{{ hotel.name }}" width="100" height="auto"/></td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}