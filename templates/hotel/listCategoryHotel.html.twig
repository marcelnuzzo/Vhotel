{% extends 'base.html.twig' %}

{% block title %}liste des catégories d'hôtels{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 style="text-align:center; background-color:cyan; text-decoration:underline">Catégories d'hôtels</h1>
</div>  

<div class="container">
<h1 style="text-align:center;background-color:yellow">{{ categoryHotel | length }} catégorie(s)   d'hôtel(s)</h1> 
    <div class="row">
        <div class="col-4">
            <h5><strong>Nom de la catégorie de l'hôtel :</strong></h5>
        </div>
        <div class="col">
            
        </div>
    </div>
</div>
<hr>
<div class="container">
{% for categoryHotel in categoryHotels %}
    <div class="row">
        <div class="col-4">
            <h5>{{ categoryHotel.label }}</h5>
        </div>
        <div class="col">
           
        </div>
    </div>
    <hr>
{% endfor %}
</div>
   
{% endblock %}